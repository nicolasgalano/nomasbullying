
.popup.popup-editar-usuarios
    .popup-close
        i.glyphicon.glyphicon-remove
    .popup-top
        h5 Editar alumno
        
    .popup-content
        form
            .form-group.form-group-lg
                input.form-control(type="text", placeholder="Nombre completo del alumno", name="full_name")
            .form-group.form-group-lg
                input.form-control(type="text", placeholder="DNI", name="dni")
            .form-group.form-group-lg.fix-height
                select.form-control.small(name="grado", placeholder="Grado")
                    option(disabled="disabled", selected="selected", name="topic") &nbsp;Grado
                    option(value="1") &nbsp;1ro A
                    option(value="2") &nbsp;1ro B
                    option(value="3") &nbsp;2do A
                    option(value="4") &nbsp;2do B
                    option(value="5") &nbsp;3ro A
                input.form-control.small.margin-left(type="text", placeholder="Edad", name="edad")
            .form-group.form-group-lg.fix-height
                select.form-control.small(name="genero", placeholder="Género")
                    option(disabled="disabled", selected="selected", name="topic") &nbsp;Género
                    option(value="1") &nbsp;Masculino
                    option(value="2") &nbsp;Femenina
            button.btn.btn--center.btn--m-t
                i.fa.fa-refresh.fa-spin.fa-fw.hide
                | Guardar/Editar

        
